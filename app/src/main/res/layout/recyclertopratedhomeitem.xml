<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgcity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/toprated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="OYO Home 18414 Cosy Studio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgcity" />

    <TextView
        android:id="@+id/txtadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saligao Circle,Goa"
        app:layout_constraintTop_toBottomOf="@+id/txtname"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        />
<ImageView
    android:id="@+id/imgrate"
    android:layout_width="90dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toBottomOf="@+id/txtadress"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/rate"
    android:layout_marginLeft="10dp"
    />

</android.support.constraint.ConstraintLayout>