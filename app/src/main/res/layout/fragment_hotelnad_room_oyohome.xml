<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentsAndPackages.HotelnadRoomOYOHome">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



   <ImageView
       android:id="@+id/imghome"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/oyohome"
       android:scaleType="fitXY"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       />
    <TextView
        android:id="@+id/txtfeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homes Featured For"
        app:layout_constraintTop_toBottomOf="@+id/imghome"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclehotelandroomfeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtfeature"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp">
    </android.support.v7.widget.RecyclerView>

     <android.support.constraint.ConstraintLayout
         android:id="@+id/consguest"
         android:layout_width="match_parent"
         android:layout_height="430dp"
         app:layout_constraintTop_toBottomOf="@+id/recyclehotelandroomfeature"
         app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/txtaffordable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:text="Cosy Holiday Homes at Affordable Price"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/txtaffordable"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="4dp"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtcomfort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comfortable &amp; Spacious"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/txtliving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtcomfort"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/comfort"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtliving"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/comfort"
                    android:layout_marginLeft="20dp"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

 <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/card1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="4dp"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtprivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private &amp; Beatifully Designed"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/txtbeatifull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtprivate"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/beauty"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtbeatifull"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/beauty"
                    android:layout_marginLeft="40dp"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/card2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="4dp"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/txtguest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loved by Guest"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/txtrated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtguest"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Rated 4.5 out of 5 by 2lakh+ guests"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtrated"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/guest"
                    android:layout_marginLeft="85dp"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/recyclerciti"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@+id/consguest"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OYO HOME Cities"
                android:textColor="@android:color/background_dark"
                android:layout_marginLeft="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewhomeandroomcities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
        </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recyclertopratedhomelay"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerciti"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Rated Homes"
                android:textColor="@android:color/background_dark"
                android:layout_marginLeft="20dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclertopratedhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>