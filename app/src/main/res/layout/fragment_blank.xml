<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentsAndPackages.BlankFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear">

                    <include
                        android:id="@+id/id3"
                        layout="@layout/firstbookingoffer"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear1">

                    <include
                        android:id="@+id/id4"
                        layout="@layout/strip_scroll_layout"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2">

                    <include
                        android:id="@+id/id5"
                        layout="@layout/table_layout"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/innings"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@+id/linear4"
                    android:orientation="horizontal">
                    <include
                        layout="@layout/oyoinnings"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_below="@+id/innings"
                    android:layout_marginTop="10dp">

                    <include
                        android:id="@+id/id6"
                        layout="@layout/strip2_layout"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/linear5">

                    <include
                        android:id="@+id/id7"
                        layout="@layout/strip3_item_layout"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/linear6">

                    <include
                        android:id="@+id/id8"
                        layout="@layout/strip4_layout"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear7">

                    <include
                        android:id="@+id/id11"
                        layout="@layout/strip8_layout"/>

                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear14"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/linear12">

                    <include
                        android:id="@+id/id13"
                        layout="@layout/strip10_layout"/>

                    />
                </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Invite &amp; Earn"
    android:layout_below="@+id/linear14"
    android:layout_marginLeft="20dp"
    android:textColor="@color/colorRed"
    android:layout_marginTop="20dp"
    />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>