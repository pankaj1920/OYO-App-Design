<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >

            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#F5F3F3" />
            <gradient android:angle="-90" android:startColor="#FAF8F8" android:endColor="#FAF8F8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dip" />
            <solid android:color="#FAF8F8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >

            <corners android:radius="8dp" />
            <stroke android:width="1dip" android:color="#FAF8F8" />
            <gradient android:angle="180" android:startColor="#FAF8F8" android:endColor="#FAF8F8 "/>
        </shape>
    </item>
</selector>