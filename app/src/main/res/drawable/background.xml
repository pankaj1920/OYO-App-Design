<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#3F3C3C" />
            <gradient android:angle="-90" android:startColor="#3F3C3C" android:endColor="#3F3C3C"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" />
            <solid android:color="#7EE4E6EE"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#3F3C3C" />
            <gradient android:angle="-90" android:startColor="#7EE4E6EE" android:endColor="#3F3C3C "/>
        </shape>
    </item>
</selector>